<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="139dp"
        android:layout_height="492dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="25dp"
        android:progress="25"
        android:rotation="270" />

    <TextView
        android:id="@+id/ROheader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:autoSizeTextType="uniform"
        android:background="@color/gray"
        android:clickable="true"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textScaleX="2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="175dp"
        android:layout_height="68dp"
        android:layout_above="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="179dp"
        android:layout_marginRight="179dp"
        android:layout_marginBottom="2dp"
        android:text="Overview"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:layout_marginBottom="-3dp"
        android:text="route contains:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="219dp"
        android:layout_height="292dp"
        android:layout_above="@+id/ROGoButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="52dp"
        android:text="@string/routeOverview"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ROBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="39dp"
        android:layout_toStartOf="@+id/ROGoButton"
        android:layout_toLeftOf="@+id/ROGoButton"
        android:text="← Back" />

    <Button
        android:id="@+id/ROGoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="38dp"
        android:text="Go!" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="146dp"
        android:layout_height="127dp"
        android:layout_above="@+id/progressBar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-138dp"
        app:srcCompat="@drawable/icons8road96" />

    <View
        android:id="@+id/divider4"
        android:layout_width="228dp"
        android:layout_height="6dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="430dp"
        android:background="@color/gray" />

</RelativeLayout>